#
# header_and_footer plugin configuration
#
# A list of dicts, for each each header and footer file set
# you need generated. The path values determine the file names in the
# output directory. The additions settings are extra content added
# to the bottom of the header file or the top of the footer file.
#


HEADER_AND_FOOTER = [{
    'source'      : 'header-and-footer/index.html',
    'separator'   : 'SPLIT-FILE-HERE',
    'header'      : 'header-and-footer/header',
    'footer'      : 'header-and-footer/footer',
    }]

HEADER_AND_FOOTER_VERBOSE = True


